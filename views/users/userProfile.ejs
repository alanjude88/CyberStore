<%- include('../layouts/user/header.ejs') %>
<div class="breadcrumb-container">
    <nav class="bg-dark text-white">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
        </ol>
    </nav>
</div>

<div class="profile-container">
    <div class="sidebar">
        <ul>
            <li><a href="/profile">Dashboard</a></li>
            <li><a href="/profile/orders">Orders</a></li>
            <li><a href="/cart">Cart</a></li>
            <li><a href="/wallet">Wallet</a></li>
            <li><a href="/profile/addresses">Addresses</a></li>
            <li><a href="/profile/referrals">Referrals</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </div>
    <div class="profile-content">
        <div class="profile-header">
            <h1 class="font-weight-bold text-dark">Dashboard</h1>
            <h2 class="font-weight-bold text-dark">Hello <%= user.name %></h2>
            <div class="button-container">
                <button onclick="window.location.href='/editProfile'" class="edit-profile-btn">Edit Profile</button>
            </div>
        </div>
        <p class="subtitle">Your profile information:</p>
        <p class="security-note">Your information is safe with us</p>

        <div class="profile-details">
            <div class="detail-item"><strong>Full Name:</strong> <%= user.name %></div>
            <div class="detail-item"><strong>Email Address:</strong> <%= user.email %></div>
            <div class="detail-item"><strong>Phone:</strong> <%= user.phone %></div>
        </div>

        
    </div>
</div>

<style>

.profile-container {
    display: flex;
    background: linear-gradient(135deg, #d8b4fe, #f3e8ff);
    min-height: calc(100vh - 60px);
    padding: 40px 20px;
}

.sidebar {
    width: 250px;
    background: #3e0a77;
    color: white;
    padding: 20px;
    border-radius: 10px;
}

.sidebar ul {
    list-style: none;
    padding: 0;
}

.sidebar ul li {
    margin-bottom: 15px;
}

.sidebar ul li a {
    color: white;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
}

.sidebar ul li a:hover {
    text-decoration: underline;
}

.profile-content {
    flex: 1;
    margin-left: 20px;
    background: rgba(255, 255, 255, 0.95);
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.profile-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

h1 {
    font-size: 24px;
    color: #333;
    margin: 0;
}

.subtitle, .security-note {
    text-align: left;
    color: #666;
    margin: 5px 0;
    font-size: 14px;
}

.security-note {
    color: #888;
    font-size: 12px;
}

.profile-details {
    margin-top: 30px;
}

.detail-item {
    margin-bottom: 15px;
    font-size: 16px;
    color: #333;
}
.breadcrumb-container {
    padding: 10px 20px;
    background: rgb(0, 0, 0);
}

.breadcrumb {
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
    list-style: none;
}

.breadcrumb-item {
    font-size: 14px;
    color: #ffffff;
}

.breadcrumb-item a {
    color: #ffffff;
    text-decoration: none;
}

.breadcrumb-item a:hover {
    text-decoration: underline;
}

.breadcrumb-item + .breadcrumb-item::before {
    content: ">";
    padding: 0 10px;
    color: #ffffff;
}

.breadcrumb-item.active {
    color: #ffffff;
}

.button-container {
    margin-top: 20px;
}

.check-wallet-btn, .edit-profile-btn {
    background: #3e0a77;
    color: #ffffff;
    padding: 8px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 500;
    text-transform: uppercase;
    font-size: 14px;
}

@media (max-width: 768px) {
    .profile-container {
        flex-direction: column;
    }

    .profile-content {
        margin-left: 0;
        margin-top: 20px;
    }
}

</style>

<%- include('../layouts/user/footer.ejs') %>
