<%- include('../layouts/user/header.ejs') %>
    <style>
       body {
    font-family: 'Poppins', sans-serif;
    background-color: #f8f5ff; /* Softer lavender */
    color: #3e0a77;
    margin: 0;
    padding: 0;
}

.shop-container {
    display: flex;
    gap: 20px;
    padding: 20px;
}

.sidebar {
    width: 280px;
    padding: 20px;
    background: linear-gradient(135deg, #f2e8ff, #d0b4ff);
    border-radius: 12px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
}

.sidebar h2 {
    font-size: 1.5rem;
    color: #3e0a77;
    margin-bottom: 15px;
}

.filter-group {
    margin-bottom: 20px;
}

.filter-group h3 {
    font-size: 1.1rem;
    margin-bottom: 10px;
    color: #3e0a77;
}

.filter-group input[type="text"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #d0b4ff;
    border-radius: 8px;
    margin-bottom: 10px;
    outline: none;
    transition: 0.3s;
}

.filter-group input[type="text"]:focus {
    border-color: #6e3bbb;
}

.filter-group label {
    display: flex;
    align-items: center;
    font-size: 0.9rem;
    color: #3e0a77;
    gap: 8px;
}

.filter-group input[type="checkbox"] {
    transform: scale(1.2);
    cursor: pointer;
}

button {
    background: #6e3bbb;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    transition: 0.3s;
}

button:hover {
    background: #3e0a77;
}

/* Products Section */
.product-list {
    flex: 1;
    padding: 20px;
}

.products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
}

.product-card {
    background: white;
    border-radius: 12px;
    padding: 15px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.product-card:hover {
    transform: scale(1.03);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

.product-card img {
    width: 100%;
    border-radius: 8px;
    margin-bottom: 10px;
}

.product-card h2 {
    font-size: 1rem;
    color: #3e0a77;
    margin: 5px 0;
}

.product-card p {
    font-size: 0.9rem;
    color: #6e3bbb;
    margin: 5px 0;
}

/* Buttons inside product card */
.product-buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
}

.icon-btn {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.4rem;
    transition: 0.3s;
}

.icon-btn i {
    color: #8f1717;
    transition: 0.3s ease;
}

.icon-btn:hover i {
    transform: scale(1.2);
    color: red;
}

/* Wishlist styles */
.add-to-favorites.in-wishlist i {
    color: red;
}

/* Discount Badge */
.discount-circle {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #6e3bbb;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1rem;
    color: white;
    box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
}

/* Pagination */
.pagination {
    margin-top: 20px;
    text-align: center;
}

.pagination a {
    display: inline-block;
    padding: 10px 15px;
    margin: 0 5px;
    border: 1px solid #6e3bbb;
    color: #3e0a77;
    text-decoration: none;
    border-radius: 8px;
    transition: 0.3s;
}

.pagination a.active,
.pagination a:hover {
    background: #6e3bbb;
    color: white;
}

/* Responsive */
@media (max-width: 768px) {
    .shop-container {
        flex-direction: column;
    }

    .sidebar {
        width: 100%;
        margin-bottom: 20px;
    }

    .products {
        grid-template-columns: 1fr;
    }
}

