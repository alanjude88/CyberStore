<%- include('../layouts/user/header.ejs') %>
<div class="breadcrumb-container">
    <nav class="bg-dark text-white">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item" ><a href="/profile/addresses">Addresses</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add New Address</li>
        </ol>
    </nav>
</div>
<div class="profile-container">
    <div class="sidebar">
        <ul>
            <li><a href="/profile">Dashboard</a></li>
            <li><a href="/profile/orders">Orders</a></li>
            <li><a href="/cart">Cart</a></li>
            <li><a href="/wallet">Wallet</a></li>
            <li><a href="/profile/addresses">Addresses</a></li>
            <li><a href="/profile/referrals">Referrals</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </div>
    <div class="profile-content">
        <div class="profile-header">
            <h1 class="font-weight-bold text-dark">Add New Address</h1>
        </div>
        <p class="subtitle">Please enter your new address details</p>
        <p class="security-note">Your information is safe with us</p>

        <div class="profile-form-container">
            <form id="addressForm" method="post" action="/profile/addresses/addNewAddress">
                <div class="form-group">
                    <label>Address Type</label>
                    <div class="input-with-icon">
                        <input type="text" name="addressType" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <div class="input-with-icon">
                        <input type="text" name="name" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>City</label>
                    <div class="input-with-icon">
                        <input type="text" name="city" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>Landmark</label>
                    <div class="input-with-icon">
                        <input type="text" name="landMark" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>District</label>
                    <div class="input-with-icon">
                        <input type="text" name="district" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>State</label>
                    <div class="input-with-icon">
                        <input type="text" name="state" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>Pincode</label>
                    <div class="input-with-icon">
                        <input type="number" name="pincode" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    <div class="input-with-icon">
                        <input type="tel" name="phone" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="form-group">
                    <label>Alternate Phone</label>
                    <div class="input-with-icon">
                        <input type="tel" name="alterPhone" required>
                        <i class="fas fa-pencil-alt"></i>
                    </div>
                </div>
                <div class="button-container">
                    <button type="submit" class="save-changes-btn">Add Address</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .profile-container {
    display: flex;
    background: linear-gradient(135deg, #d8b4fe, #f3e8ff);
    min-height: calc(100vh - 60px);
    padding: 40px 20px;
}

.sidebar {
    width: 250px;
    background:#3e0a77;
    color: white;
    padding: 20px;
    border-radius: 10px;
}

.sidebar ul {
    list-style: none;
    padding: 0;
}

.sidebar ul li {
    margin-bottom: 15px;
}

.sidebar ul li a {
    color: white;
    text-decoration: none;
    font-size: 16px;
    font-weight: 500;
}

.sidebar ul li a:hover {
    text-decoration: underline;
}

.profile-content {
    flex: 1;
    margin-left: 20px;
    background: rgba(255, 255, 255, 0.95);
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.profile-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

h1 {
    font-size: 24px;
    color: #333;
    margin: 0;
}

.subtitle, .security-note {
    text-align: left;
    color: #666;
    margin: 5px 0;
    font-size: 14px;
}

.security-note {
    color: #888;
    font-size: 12px;
}

.profile-form-container {
    margin-top: 30px;
}

.form-group {
    margin-bottom: 20px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    color: #333;
    font-size: 14px;
}

.input-with-icon {
    position: relative;
    display: flex;
    align-items: center;
}

.input-with-icon input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
}

.input-with-icon i {
    position: absolute;
    right: 12px;
    color: #666;
    cursor: pointer;
    font-size: 14px;
}

.button-container {
    margin-top: 20px;
}

.save-changes-btn {
    background: #1a237e;
    color: white;
    padding: 12px 30px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: 500;
    text-transform: uppercase;
}

@media (max-width: 768px) {
    .profile-container {
        flex-direction: column;
    }

    .profile-content {
        margin-left: 0;
        margin-top: 20px;
    }

    .form-row {
        grid-template-columns: 1fr;
        gap: 0;
    }
}

.breadcrumb-container {
    padding: 10px 20px;
    background: rgb(0, 0, 0);
}

.breadcrumb {
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
    list-style: none;
}

.breadcrumb-item {
    font-size: 14px;
    color: #ffffff;
}

.breadcrumb-item a {
    color: #ffffff;
    text-decoration: none;
}

.breadcrumb-item a:hover {
    text-decoration: underline;
}

.breadcrumb-item + .breadcrumb-item::before {
    content: ">";
    padding: 0 10px;
    color: #ffffff;
}

.breadcrumb-item.active {
    color: #ffffff;
}
</style>



