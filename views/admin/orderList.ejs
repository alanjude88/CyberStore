                .content {
                    background-color: #ffffff;
                }

                .order-list-page {
                    padding: 20px;
                    margin-left: 250px;
                }

                .content {
                    margin-left: 250px;
                    padding: 20px;
                }

                .card-header {
                    background-color: #ffffff;
                }

                .table th,
                .table td {
                    vertical-align: middle;
                }

                .table thead th {
                    background-color: #e9ecef;
                }

                .table td a i {
                    color: #007bff;
                }

                .status-delivered {
                    color: green;
                }

                .status-processing {
                    color: purple;
                }

                .status-cancelled {
                    color: red;
                }

                .status-pending {
                    color: orange;
                }

                .status-return-request {
                    color: blue;
                }

                .status-returned {
                    color: brown;
                }
            </style>

            <style>
                .table th,
                .table td {
                    vertical-align: middle;
                    padding: 0.5rem;
                }

                .status-pending {
                    color: orange;
                    font-weight: bold;
                }

                .status-processing {
                    color: blue;
                    font-weight: bold;
                }

                .status-shipped {
                    color: purple;
                    font-weight: bold;
                }

                .status-delivered {
                    color: green;
                    font-weight: bold;
                }

                .status-cancelled {
                    color: red;
                    font-weight: bold;
                }
            </style>

            