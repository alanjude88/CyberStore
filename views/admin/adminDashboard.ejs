<!-- time -->
            <script>
                function updateClock() {
                    const now = new Date();
                    const time = now.toLocaleTimeString('en-US', {
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit',
                        hour12: true
                    });
                    document.getElementById('clock').textContent = time;
                }

                updateClock();
                setInterval(updateClock, 1000);

                function updateDateRange() {
                    const end = new Date();
                    const start = new Date();
                    start.setMonth(end.getMonth() - 1);

                    const dateString = `${start.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                    })} - ${end.toLocaleDateString('en-US', {
                        month: 'short',
                        day: 'numeric',
                        year: 'numeric'
                    })}`;

                    document.getElementById('dateRange').textContent = dateString;
                }

                updateDateRange();
                setInterval(updateDateRange, 1000);
            </script>

            <!-- product chartss   -->
            <script>
                document.addEventListener("DOMContentLoaded", () => {
                    // Ensure topProducts data is available
                    const topProducts = <%- JSON.stringify(topProducts) %> || [];
            
                    if (!Array.isArray(topProducts) || topProducts.length === 0) {
                        console.warn("No data available for top products chart.");
                        return; // Exit if there's no data
                    }
            
                    const productLabels = topProducts.map((product) => product.productName);
                    const productQuantities = topProducts.map((product) => product.totalQuantity);
            
                    // Ensure the canvas element exists
                    const chartCanvas = document.getElementById('topProductsChart');
                    if (!chartCanvas) {
                        console.error("Canvas element with ID 'topProductsChart' not found.");
                        return;
                    }
            
                    const ctx = chartCanvas.getContext('2d');
            
                    new Chart(ctx, {
                        type: 'doughnut', 
                        data: {
                            labels: productLabels,
                            datasets: [{
                                label: 'Top Products by Quantity',
                                data: productQuantities,
                                backgroundColor: [
                                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                                    '#FF9F40', '#E7E9ED', '#FF6384', '#36A2EB', '#FFCE56',
                                ],
                                borderWidth: 1,
                            }],
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,  // Helps in rendering inside containers
                            plugins: {
                                legend: {
                                    position: 'top',
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function (tooltipItem) {
                                            const productName = productLabels[tooltipItem.dataIndex];
                                            const quantity = productQuantities[tooltipItem.dataIndex];
                                            return `${productName}: ${quantity}`;
                                        },
                                    },
                                },
                            },
                        },
                    });
                });
            </script>
            
