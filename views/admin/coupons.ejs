<%- include('../layouts/admin/header.ejs') %>
<%- include('../layouts/admin/sidebar.ejs', { currentPage: 'coupons' }) %>

<div class="content">
    <div class="container-fluid p-3">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h3>Coupon Management</h3>
                        <button class="btn btn-primary" onclick="window.location.href='/admin/coupons/add'">Add Coupon</button>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Min Purchase</th>
                                    <th>Offer Price</th>
                                    <th>Expiry Date</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (coupons && coupons.length > 0) { %>
                                    <% coupons.forEach(c => { %>
                                        <tr>
                                            <td><%= c.code %></td>
                                            <td>₹<%= c.minimumPrice %></td>
                                            <td>₹<%= c.offerPrice %></td>
                                            <td><%= new Date(c.expireOn).toLocaleDateString() %></td>
                                            <td class="<%= c.isListed ? 'text-success' : 'text-danger' %>"><%= c.isListed ? 'Active' : 'Inactive' %></td>
                                            <td>
                                                <button class="btn btn-warning btn-sm" onclick="window.location.href='/admin/coupons/edit/<%= c._id %>'">Edit</button>
                                                <button class="btn btn-danger btn-sm" onclick="confirmDelete('<%= c._id %>')">Delete</button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" class="text-center text-warning">No coupons found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #ffffff;
        color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .content {
        margin-left: 250px;
    }

    .card {
        background-color: #ffffff;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        color: #f5f5f5;
    }

    .card-header {
        background-color: #ffffff;
        padding: 15px;
        border-bottom: 1px solid #444;
        border-radius: 10px 10px 0 0;
    }

    .card-header h3 {
        margin: 0;
        color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: #181818;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #00a1cc;
    }

    .btn-warning {
        background-color: #ffaa33;
        border: none;
        color: #181818;
    }

    .btn-warning:hover {
        background-color: #e6992b;
    }

    .btn-danger {
        background-color: #ff4d4d;
        border: none;
        color: #f5f5f5;
    }

    .btn-danger:hover {
        background-color: #cc3d3d;
    }

    .table {
        background-color: #ffffff;
        color: #f5f5f5;
        margin: 0;
        border-collapse: collapse;
    }

    .table-bordered {
        border: 1px solid #333;
    }

    .table thead th {
        background-color: #3f3f3f;
        color: #00d1ff;
        padding: 10px;
        text-align: center;
        border: 1px solid #444;
    }

    .table tbody td {
        padding: 10px;
        text-align: center;
        border: 1px solid #444;
    }

    .table tbody tr:nth-child(even) {
        background-color: #2a2a2a;
    }

    .table tbody tr:hover {
        background-color: #333333;
    }

    .text-success {
        color: #00ff7f;
    }

    .text-danger {
        color: #ff4d4d;
    }

    .text-warning {
        color: #ffaa33;
    }

    .container-fluid {
        padding: 20px;
    }
</style>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function confirmDelete(couponId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to undo this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {
            window.location.href = '/admin/deleteCoupon?couponId=' + couponId;
        }
    });
}
</script>

